<Window x:Class="QuanLyDoiBong.Layouts.ThemBanThang"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyDoiBong.Layouts"
        mc:Ignorable="d"
        Title="Thêm Bàn Thắng" Height="230" Width="1200"
        ResizeMode="CanMinimize"
        Top="100" Left="50"
        KeyDown="EnterEvent"
        >

    <Grid>
    <Grid Height="120" VerticalAlignment="Top">
        
        <!--Definition-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*"/>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.8*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1.2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>


        <!--MÃ CẦU THỦ-->
        <Border Grid.Column="0" Grid.Row="0"
                        BorderThickness="2"
                        BorderBrush="{StaticResource MY_GRAY}">
            <TextBlock Foreground="{StaticResource MY_GREEN}" FontSize="22" 
                 HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       >
            MÃ CẦU THỦ
            </TextBlock>
        </Border>

        <Border Grid.Column="0" Grid.Row="1"
                        BorderThickness="2"
                        BorderBrush="{StaticResource MY_GRAY}">
            <TextBox  
                Name="txtMaCauThu"
                TextChanged="txtMaCauThu_TextChanged"
                FontSize="18"
                Width="180"
                      BorderThickness="0"
                 HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                 Margin="10,0,0,0"
                Text="{Binding Path= m_MACT}"
                       >
            </TextBox>
        </Border>


        <!--HỌ TÊN-->
        <Border Grid.Column="1" Grid.Row="0"
                        BorderThickness="2"
                        BorderBrush="{StaticResource MY_GRAY}">
            <TextBlock Foreground="{StaticResource MY_GREEN}" FontSize="22" 
                 HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       
                       >
            HỌ TÊN
            </TextBlock>
        </Border>

        <Border Grid.Column="1" Grid.Row="1"
                        BorderThickness="2"
                        BorderBrush="{StaticResource MY_GRAY}">
            <TextBlock 
                Name="txtHoTen"  
                FontSize="18" 
                 HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"
                Text="{Binding Path= m_TENCT}"
                       />
        </Border>


        <!--ĐỘI-->
        <Border Grid.Column="2" Grid.Row="0"
                        BorderThickness="2"
                        BorderBrush="{StaticResource MY_GRAY}">
            <TextBlock Foreground="{StaticResource MY_GREEN}" FontSize="22" 
                 HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       >
            ĐỘI
            </TextBlock>
        </Border>
        
        <Border Grid.Column="2" Grid.Row="1"
                        BorderThickness="2"
                        BorderBrush="{StaticResource MY_GRAY}">
            <ComboBox 
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Name="cbbDoi"
                Background="#ffffff"
                FontSize="18" 
                MaxDropDownHeight="150"
                    Text="{Binding Path= m_TENDB, Mode=OneWayToSource}"
                       >
            </ComboBox>
        </Border>




        <!--LOẠI BÀN THẮNG-->
        <Border Grid.Column="3" Grid.Row="0"
                        BorderThickness="2"
                        BorderBrush="{StaticResource MY_GRAY}">
            <TextBlock Foreground="{StaticResource MY_GREEN}" FontSize="22" 
                 HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       >
            LOẠI BÀN THẮNG
            </TextBlock>
        </Border>

        <Border Grid.Column="3" Grid.Row="1"
                        BorderThickness="2"
                        BorderBrush="{StaticResource MY_GRAY}">
                <ComboBox 
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                Name="cbbLoaiBanThang"
                FontSize="18" 
                MaxDropDownHeight="120"
                    Text="{Binding Path= m_TENLOAIBANTHANG, Mode=OneWayToSource}"
                       >
                </ComboBox>
        </Border>


        <!--THỜI ĐIÊM-->
        <Border Grid.Column="4" Grid.Row="0"
                        BorderThickness="2"
                        BorderBrush="{StaticResource MY_GRAY}">
            <TextBlock Foreground="{StaticResource MY_GREEN}" FontSize="22" 
                 HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       >
            THỜI ĐIỂM
            </TextBlock>
        </Border>

            <Border Grid.Column="4" Grid.Row="1"
                        BorderThickness="2"
                        BorderBrush="{StaticResource MY_GRAY}">
                <TextBox  
                    Name="txtThoiDiem"
                FontSize="18"
                Width="130"
                      BorderThickness="0"
                 HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                 Margin="10,0,0,0"
                    Text="{Binding Path= m_PHUTGHIBAN}"
                       >
                </TextBox>
            </Border>
        </Grid>

        <!--BUTTON THOÁT-->
        <Border CornerRadius="5" BorderThickness="4"
                            BorderBrush="{StaticResource MY_GRAY}"
                 Width="120" Height="50"
                HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
                Margin="0,0,20,10">
            <Button 
                Name="btnThoat"
                Click="btnThoatBanThang_Click"
                Background="{StaticResource MY_RED}">
                <TextBlock FontSize="30"
                           FontFamily="/Fonts/Roboto.ttf"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0, 0, 0, 0"
                           Foreground="#FFFFFF">
                    THOÁT
                </TextBlock>
            </Button>
        </Border>


        <!--BUTTON THÊM-->
        <Border CornerRadius="5" BorderThickness="4"
                            BorderBrush="{StaticResource MY_GRAY}"
                 Width="120" Height="50"
                HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
                Margin="0,0,170,10">
            <Button 
                Name="btnTHEM"
                Click="btnThemBanThang_Click"
                Background="{StaticResource MY_GREEN}">
                <TextBlock FontSize="30"
                           FontFamily="/Fonts/Roboto.ttf"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0, 0, 0, 0"
                           Foreground="#FFFFFF">
                    THÊM
                </TextBlock>
            </Button>
        </Border>
        
    </Grid>
</Window>
