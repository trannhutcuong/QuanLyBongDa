<Window x:Class="QuanLyDoiBong.Layouts.GhiNhanKetQuaTranDau"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyDoiBong.Layouts"
        mc:Ignorable="d"
        Title="Ghi Nhận Kết Quả" Height="680" Width="1284"
        Left="0"
        ResizeMode="CanMinimize"
        Top="0">
    <Grid>
        <!--Thanh ngang trên cùng-->
        <StackPanel Background="{StaticResource MY_GRAY}" Height="10" VerticalAlignment="Top"/>

        <!--Thanh NHẬP THÔNG TIN HLV-->
        <StackPanel Background="{StaticResource MY_BLUE}" Height="80" VerticalAlignment="Top"
                    Margin="0,10,0,0"
                    Orientation="Horizontal">
            <Image Source="/Images/IconManHinh/GhiNhanKetQua.png"
                   Width="auto"
                   Height="90"
                   VerticalAlignment="Top"
                   Margin="0,-5,0,0"/>
            <TextBlock HorizontalAlignment="Left"    VerticalAlignment="Center"
                       Margin="280,0,0,0"
                       FontSize="40"
                       FontWeight="Bold"
                       FontFamily="/Fonts/Roboto.ttf"
                       Foreground="#ffffff">
                GHI NHẬN KẾT QUẢ TRẬN ĐẤU
            </TextBlock>
        </StackPanel>
        
        <!--MÃ TRẬN ĐẤU-->

        <StackPanel Orientation="Horizontal"
                    Height="50"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="1280"
                    Margin="0,115,0,0">
            <TextBlock
                Margin="100,10,0,0"
                FontSize="25"
                       Foreground="{StaticResource MY_GRAY}"
                       FontFamily="/Fonts/Roboto.ttf">
                Mã Trận Đấu:
            </TextBlock>

            <Border CornerRadius="2" BorderThickness="2"
                            BorderBrush="{StaticResource MY_BLUE}"
                             Margin="20,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Width="220" Height="40"
                            >
                <ComboBox 
                        Name="cbbMaTranDau"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                    Height="36"
                          FontSize="20"
                          Background="Yellow"
                          SelectedIndex="0"
                            MaxDropDownHeight="150"
                            SelectionChanged="cbbMaTranDau_SelectionChanged"
                    >
                </ComboBox>
            </Border>

            <TextBlock
                Margin="280,10,0,0"
                FontSize="25"
                       Foreground="{StaticResource MY_GRAY}"
                       FontFamily="/Fonts/Roboto.ttf">
                Sân:
            </TextBlock>

            <Border CornerRadius="5" BorderThickness="2"
                            BorderBrush="{StaticResource MY_BLUE}"
                             Margin="20,5,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Width="200" Height="35"
                    
                            >
                <TextBlock FontFamily="/Fonts/Roboto-Thin.ttf"
                            FontSize="20"
                                 VerticalAlignment="Center"         Name= "txtTenSan"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0"
                              />

            </Border>

        </StackPanel>

        <StackPanel Background="{StaticResource MY_GRAY}" Height="2" VerticalAlignment="Top"
                    Margin="0,170,0,0"/>

        <!--ĐỘI 1-->
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="100"
                    Width="600"
                    Margin="0,180,0,0">

            <!--Tên đội-->
            <StackPanel Orientation="Horizontal">
                <!-- NUM 1-->
                <TextBlock FontSize="25"
                           FontFamily="/Fonts/Roboto.ttf"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="80, 20, 0, 0"
                           Foreground="{StaticResource MY_GRAY}"
                           >
                    ĐỘI 1:
                </TextBlock>

                <!-- NUM 3-->
                <Border CornerRadius="5" BorderThickness="2"
                            BorderBrush="{StaticResource MY_BLUE}"
                             Margin="123,15,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Width="280" Height="35"
                            >
                    <TextBlock FontFamily="/Fonts/Roboto-Thin.ttf"
                            FontSize="20"
                                 VerticalAlignment="Center"
                             Name="txtTenDoi1"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0"
                              />

                </Border>
            </StackPanel>


            <!--Sỉ số-->
            <StackPanel Orientation="Horizontal">
                <!-- NUM 1-->
                <TextBlock FontSize="25"
                           FontFamily="/Fonts/Roboto.ttf"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="80, 20, 0, 0"
                           Foreground="{StaticResource MY_GRAY}"
                           >
                    Số bàn thắng:
                </TextBlock>

                <!-- NUM 3-->
                <Border CornerRadius="5" BorderThickness="2"
                            BorderBrush="{StaticResource MY_BLUE}"
                             Margin="40,15,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Width="70" Height="35"
                            >
                    <TextBox FontFamily="/Fonts/Roboto-Thin.ttf"
                             BorderThickness="0"
                            FontSize="20"
                                 VerticalAlignment="Center"
                             Name="txtSiSoDoi1"
                             Text="{Binding Path=m_SCORED1}"
                              />

                </Border>
            </StackPanel>
        </StackPanel>


        <!--ĐỘI 2-->
        <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Height="100"
                    Width="600"
                    Margin="620,180,0,0">

            <!--Tên đội-->
            <StackPanel Orientation="Horizontal">
                <!-- NUM 1-->
                <TextBlock FontSize="25"
                           FontFamily="/Fonts/Roboto.ttf"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="100, 20, 0, 0"
                           Foreground="{StaticResource MY_GRAY}"
                           >
                    ĐỘI 2:
                </TextBlock>

                <!-- NUM 3-->
                <Border CornerRadius="5" BorderThickness="2"
                            BorderBrush="{StaticResource MY_BLUE}"
                             Margin="123,15,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Width="280" Height="35"
                            >
                    <TextBlock FontFamily="/Fonts/Roboto-Thin.ttf"
                            FontSize="20"
                                 VerticalAlignment="Center"
                             Name="txtTenDoi2"
                               HorizontalAlignment="Left"
                               Margin="10,0,0,0"
                              />

                </Border>
            </StackPanel>


            <!--Sỉ số-->
            <StackPanel Orientation="Horizontal">
                <!-- NUM 1-->
                <TextBlock FontSize="25"
                           FontFamily="/Fonts/Roboto.ttf"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="100, 20, 0, 0"
                           Foreground="{StaticResource MY_GRAY}"
                           >
                    Số bàn thắng:
                </TextBlock>

                <!-- NUM 3-->
                <Border CornerRadius="5" BorderThickness="2"
                            BorderBrush="{StaticResource MY_BLUE}"
                             Margin="40,15,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Width="70" Height="35"
                            >
                    <TextBox FontFamily="/Fonts/Roboto-Thin.ttf"
                             BorderThickness="0"
                            FontSize="20"
                                 VerticalAlignment="Center"
                             Name="txtSiSoDoi2"
                             Text="{Binding Path=m_SCORED2}"
                              />

                </Border>
            </StackPanel>
        </StackPanel>

        <StackPanel Background="{StaticResource MY_GRAY}" Height="2" VerticalAlignment="Top"
                    Margin="0,300,0,0"/>

        <Button Height="80" Width="80"
                    Background="#FFFFFF"
                    Name="btnAddBanThang"
                    BorderThickness="0"
                    Click="btnAddBanThang_Click"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                    Margin="0,0,40,210"
                    >

            <Image Source="/Images/IconManHinh/icon_add.png"/>
        </Button>

        <!--LISTVIEW-->

        <ListView
                Name="lvBanThang"
                Background="AliceBlue"
                Height="290"
                Width="1020"
                BorderBrush="{StaticResource MY_BLUE}"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Margin="70,0,0,20"
                FontSize="18">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="STT" DisplayMemberBinding="{Binding m_SOTT}" Width="70"/>
                    <GridViewColumn Header="Mã cầu thủ"
                                        DisplayMemberBinding="{Binding m_MACT}" Width="150"
                       
                                    />
                    <GridViewColumn Header="Họ tên"
                                        DisplayMemberBinding="{Binding m_TENCT}" Width="250"/>
                    <GridViewColumn Header="Đội"
                                        DisplayMemberBinding="{Binding m_TENDB}" Width="250"/>
                    <GridViewColumn Header="Loại bàn thắng" DisplayMemberBinding="{Binding m_TENLOAIBANTHANG}" Width="150"/>
                    <GridViewColumn Header="Thời điểm" DisplayMemberBinding="{Binding m_PHUTGHIBAN}" Width="150"/>
                </GridView>
            </ListView.View>

        </ListView>

        <!--BUTTON LƯU-->
        <Border CornerRadius="5" BorderThickness="4"
                            BorderBrush="{StaticResource MY_GRAY}"
                 Width="120" Height="50"
                HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
                Margin="0,0,20,100"
                >
            <Button Background="{StaticResource MY_GREEN}"
                    Name="btnGhiNhanKQ"
                    Click="btnGhiNhanKQ_Click"
                    >
                <TextBlock FontSize="30"
                           FontFamily="/Fonts/Roboto.ttf"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0, 0, 0, 0"
                           Foreground="#FFFFFF">
                    LƯU
                </TextBlock>
            </Button>
        </Border>

        <!--BUTTON THOÁT-->
        <Border CornerRadius="5" BorderThickness="4"
                            BorderBrush="{StaticResource MY_GRAY}"
                 Width="120" Height="50"
                HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
                Margin="0,0,20,30">
            <Button 
                Name="btnThoat"
                Click="btnThoatGhiNhan_Click"
                Background="{StaticResource MY_RED}">
                <TextBlock FontSize="30"
                           FontFamily="/Fonts/Roboto.ttf"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0, 0, 0, 0"
                           Foreground="#FFFFFF">
                    THOÁT
                </TextBlock>
            </Button>
        </Border>
    </Grid>
</Window>
